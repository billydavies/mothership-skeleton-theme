{% extends 'Message:Mothership:Ecommerce::checkout:checkout-layout' %}

{% block content %}
	<main class="checkout" id="main-content">
		<h1>Checkout</h1>
		<section class="progress">
			<div>
				<p><strong>Stage 01</strong> Your selection</p>
			</div>
			<div class="active">
				<p><strong>Stage 02</strong> Your details</p>
			</div>
			<div>
				<p><strong>Stage 03</strong> Delivery details</p>
			</div>
			<div>
				<p><strong>Stage 04</strong> Payment</p>
			</div>
			<div>
				<p><strong>Stage 05</strong> Confirmation</p>
			</div>
		</section>
		{{ form_start(form) }}
			<section class="registration">
				<div class="row">
					<h2>Register new account</h2>
					<section class="billing">
						<h3>Billing Address</h3>
						<div class="column">
							{{ form_row(form.addresses.billing.title) }}
							{{ form_row(form.addresses.billing.forename) }}
							{{ form_row(form.addresses.billing.surname) }}
							{{ form_row(form.addresses.billing.address_line_1) }}
							{{ form_row(form.addresses.billing.address_line_2) }}
							{{ form_row(form.addresses.billing.address_line_3) }}
							{{ form_row(form.addresses.billing.address_line_4) }}
						</div>
						<div class="column right">
							{{ form_row(form.addresses.billing.town) }}
							{{ form_row(form.addresses.billing.postcode) }}
							{{ form_row(form.addresses.billing.countryID) }}
							{{ form_row(form.addresses.billing.stateID, {
								attr: {
									'data-state-filter-country-selector': '#' ~ form.addresses.billing.countryID.vars.id
								}
							}) }}
							{{ form_row(form.addresses.billing.telephone) }}
							{{ form_row(form.addresses.deliverToDifferent, {
								attr: {
									'data-toggle': 'section.delivery',
									'data-toggle-inverted': 'true'
								}
							}) }}
						</div>
					</section>
					<section class="delivery">
						<h3>Delivery Address</h3>
						<div class="column">
							{{ form_row(form.addresses.delivery.title) }}
							{{ form_row(form.addresses.delivery.forename) }}
							{{ form_row(form.addresses.delivery.surname) }}
							{{ form_row(form.addresses.delivery.address_line_1) }}
							{{ form_row(form.addresses.delivery.address_line_2) }}
							{{ form_row(form.addresses.delivery.address_line_3) }}
							{{ form_row(form.addresses.delivery.address_line_4) }}
						</div>
						<div class="column right">
							{{ form_row(form.addresses.delivery.town) }}
							{{ form_row(form.addresses.delivery.postcode) }}
							{{ form_row(form.addresses.delivery.countryID) }}
							{{ form_row(form.addresses.delivery.stateID, {
								attr: {
									'data-state-filter-country-selector': '#' ~ form.addresses.delivery.countryID.vars.id
								}
							}) }}
							{{ form_row(form.addresses.delivery.telephone) }}
						</div>
					</section>
				</div>
				<div class="row">
					<section class="account-details">
						<h3>Account Details</h3>
						<div class="column">
						{{ form_row(form.email) }}
						{{ form_row(form.password) }}
						</div>
					</section>
				</div>
			</section>
			<nav class="checkout-nav">
				<a href="/checkout" class="button cancel">Back to selection</a>
				<button type="submit" class="button continue">Continue to delivery'</button>
			</nav>
		{{ form_end(form) }}
	</main>
{% endblock %}
