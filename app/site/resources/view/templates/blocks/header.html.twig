<header class="header" role="banner" id="top">
	{# Site logo #}
	<h1 class="logo">
		<a href="/">Mothership</a>
	</h1>

	{# Shop Access #}
	{% block shopaccess %}
		{% include '@Mothership:Site::module:header:shopaccess' %}
	{% endblock %}

	{# Main navigation #}
	{% block navigation %}
		{% include '@Mothership:Site::module:header:navigation' %}
	{% endblock %}

	{# Site search #}
	{% block search %}
		{% include '@Mothership:Site::module:header:search' %}
	{% endblock %}

	{# Basket #}
	{% block basket %}
		{{ render(controller('Mothership:Site::Controller:Module:Shop#basket')) }}
	{% endblock %}

</header>